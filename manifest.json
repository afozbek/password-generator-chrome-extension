{
  "name": "Password Generator",
  "description": "Password Generator App",
  "version": "1.0",
  "manifest_version": 2,
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": "icon16.png",
    "default_title": "Password Generator"
  },

  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_security_policy": "script-src 'self' 'sha256-KpUD0OqrhpjYyY4I0cjggeTWI8CXIM0eyGJQyvipMsY='; object-src 'self'",
  "options_page": "./options.html",
  "permissions": ["tabs"]
}
